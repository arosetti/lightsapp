<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/fragment_recv"
                tools:context=".Main$PlaceholderFragment">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewText"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:paddingTop="5dp"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="false">

        <TextView
            android:id="@+id/TextViewRecv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:gravity="top|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/idle"
            android:textSize="20sp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            />
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewMorse"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:paddingTop="5dp"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="false"
        android:layout_above="@+id/LayoutCtl"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/scrollViewText">

        <TextView
            android:id="@+id/TextViewMorse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:gravity="top|left"
            android:layout_gravity="center_horizontal"
            android:text="@string/idle"
            android:textSize="15sp"/>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:id="@+id/LayoutCtl"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/sensitivity"
                android:id="@+id/textViewSensitivity"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical"
                android:paddingRight="4dp" />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarSensitivity"
                android:clickable="true"
                android:focusable="true"
                android:max="100"
                android:minWidth="150dp"
                android:layout_gravity="right"
                android:progress="30"/>

        </LinearLayout>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:id="@+id/radioGroupMode"
            android:showDividers="middle"
            android:gravity="center_horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="light"
                android:id="@+id/radioButtonLight"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sound"
                android:id="@+id/radioButtonSound"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"/>

        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_start"
                android:id="@+id/ButtonRecv"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_reset"
                android:id="@+id/ButtonReset"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
